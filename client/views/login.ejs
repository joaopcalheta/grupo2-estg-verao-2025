<!-- views/login.ejs-->

<head>
  <link href="/css/login.css" rel="stylesheet" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
</head>

<div class="container">
  <div>
    <p><b>Bem-vindo!</b></p>
  </div>

  <div class="d-flex justify-content-center">
    <div class="switch">
      <div class="slider" id="slider"></div>
      <button id="btn-login" class="active">Login</button>
      <button id="btn-register">Registar</button>
    </div>
  </div>

  <form id="login-form" class="form active" action="/login" method="POST">
    <br />
    <div class="mailpass">
      <div>
        <label>Email</label>
        <br />
        <input
          type="email"
          name="email"
          placeholder="Escreva o seu email"
          required
        />
        <br />
        <label>Password</label>
        <br />
        <input
          type="password"
          name="password"
          placeholder="Escreva a sua password"
          required
        />
      </div>
    </div>
    <br />
    <div class="checkbox-group">
      <div>
        <label><input type="checkbox" id="checkbox" />Lembrar-me</label>
      </div>
      <div>
        <a href="/reset-password" class="esqueci"
          >Esqueceu-se da palavra-passe?</a
        >
      </div>
    </div>

    <button type="submit" class="lgn">Login</button>
  </form>
  <form id="register-form" class="form" method="POST" action="/register">
    <div class="mailpass">
      <div class="candidato-f">
        <label>Nome</label><br />
        <input
          name="name"
          type="text"
          placeholder="Escreva o seu nome"
          required
        /><br />

        <label>Username</label><br />
        <input
          name="username"
          type="text"
          placeholder="Escreva o seu nome de utilizador"
          required
        /><br />

        <label>Email</label><br />
        <input
          name="email"
          type="email"
          placeholder="Escreva o seu email"
          required
        /><br />

        <label>Password</label><br />
        <input
          name="password"
          type="password"
          placeholder="Escreva a sua password"
          required
        /><br />

        <label>Confirmar password</label><br />
        <input
          name="confirmpassword"
          type="password"
          placeholder="Confirme a sua password"
          required
        />
      </div>
    </div>
    <button type="submit" class="rgst">Registar</button>
  </form>
</div>

<% if (success) { %>
<div class="alert alert-success"><%= success %></div>
<% } %> <% if (error) { %>
<div class="alert alert-danger"><%= error %></div>
<% } %>
<script src="js/login.js"></script>
