<head>
  <link href="/css/login.css" rel="stylesheet" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
</head>

<div class="container">
  <div>
    <p><b>Bem-vindo!</b></p>
  </div>

  <div class="d-flex justify-content-center">
    <div class="switch">
      <div class="slider" id="slider"></div>
      <button id="btn-login" class="active">Login</button>
      <button id="btn-register">Registar</button>
    </div>
  </div>

  <div id="login-form" class="form active">
    <br />
    <div class="mailpass">
      <div>
        <label>Email</label>
        <br />
        <input type="email" placeholder="Escreva o seu email" required />
        <br />
        <label>Password</label>
        <br />
        <input type="password" placeholder="Escreva a sua password" required />
      </div>
    </div>
    <br />
    <div class="checkbox-group">
      <div>
        <label><input type="checkbox" id="checkbox" />Lembrar-me</label>
      </div>
      <div><a href="#" class="esqueci">Esqueceu-se da palavra-passe?</a></div>
    </div>

    <button class="lgn">Login</button>
  </div>
  <div id="register-form" class="form">
    <div class="radio-group">
      <label>
        <input
          type="radio"
          name="tipo"
          value="candidato"
          id="btn-candidato"
          checked
        />
        Candidato
      </label>
      <label>
        <input type="radio" name="tipo" value="empresa" id="btn-empresa" />
        Empresa
      </label>
    </div>

    <br />
    <div class="mailpass">
      <div class="candidato-f">
        <label>Nome</label>
        <br />
        <input type="nome" placeholder="Escreva o seu nome" />
        <br />
        <label>Email</label>
        <br />
        <input type="email" placeholder="Escreva o seu email" />
        <br />
        <label>Password</label>
        <br />
        <input type="password" placeholder="Escreva a sua password" />
        <br />
        <label>Confirmar password</label>
        <br />
        <input type="confirmpassword" placeholder="Confirme a sua password" />
      </div>
      <div class="empresa-f">
        <label>Nome da empresa</label>
        <br />
        <input type="nomeempresa" placeholder="Escreva o nome da sua empresa" />
        <br />
        <label>Email da empresa</label>
        <br />
        <input type="email" placeholder="Escreva o email da sua empresa" />
        <br />
        <label>NIF da empresa</label>
        <br />
        <input type="nifempresa" placeholder="Insira o nif da sua empresa" />
        <br />
        <label>Password</label>
        <br />
        <input type="password" placeholder="Escreva a sua password" />
        <br />
        <label>Confirmar password</label>
        <br />
        <input type="confirmpassword" placeholder="Confirme a sua password" />
      </div>
    </div>
    <br />

    <br />
    <button class="rgst">Registar</button>
  </div>
</div>
<script src="js/login.js"></script>
