<head>
  <link href="/css/client-submit.css" rel="stylesheet" />
</head>
<div class="container">
  <p><b>Candidatura</b></p>
  <div class="dados">
    <input type="nome" placeholder="Nome completo" />
    <br />
    <input type="idade" placeholder="Idade" />
    <br />
    <input type="numero" placeholder="Nº de Telefone" />
    <br />
    <input type="nif" placeholder="NIF" />
    <br />
    <input type="email" placeholder="E-mail" />
    <br />
    <input type="morada" placeholder="Morada" />
    <br />
    <input type="localidade" placeholder="Localidade" />
    <br />
    <label>
       Escolaridade
      <select name="escolaridade" >
        <option>--</option>
        <option>1º ciclo</option>
        <option>2º ciclo</option>
        <option>3º ciclo</option>
        <option>Secundário</option>
        <option>Licenciatura</option>
        <option>Mestrado</option>
      </select>
    </label>
    <br />
    <input type="linguas" placeholder="Linguas" />
    <br />
    <div class="sobre">
      <input type="sobre" placeholder="Sobre mim" />
    </div>
    <br />
    <div>
      <h5 id="cv">Anexar CV:</h5>
      <br />
      <input type="file" class="d-none" id="fileInput" />
      <label for="fileInput" class="btn btn-primary">
        <i class="bi bi-upload"></i> Enviar arquivo
      </label>
    </div>

    <div class="actions-btn">
      <button type="button" class="btn btn-blue" onclick="history.back()">
        Voltar
      </button>
      <button type="submit" class="btn btn-blue">Enviar</button>
    </div>
  </div>
</div>
