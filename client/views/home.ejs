<!-- home.ejs -->
<head>
  <link href="/css/home.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/top-button.css" />
  <link href="/css/notifications.css" rel="stylesheet" />
</head>

<!-- pesquisar, ordenar e filtrar -->
<div class="main-card-search-filter mb-3">
  <!-- pesquisar -->
  <div class="input-group">
    <input
      class="main-card-search form-control rounded-bottom-0"
      type="text"
      id="searchInput"
      placeholder="Pesquisar emprego"
    />
    <button
      id="searchBtn"
      type="button"
      class="search-bottom p-2 bg-black text-white"
    >
      <i class="bi bi-search px-1"></i>
    </button>
  </div>

  <div class="d-flex justify-content-between">
    <!-- ordernar (dropdown) -->
    <div class="d-flex main-card-filter-right justify-content-center">
      <button
        type="button"
        id="dropdown-menu-order"
        data-bs-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
      >
        <i class="bi bi-filter me-2"></i> <b>ORDENAR</b>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdown-menu-order">
        <a
          class="dropdown-item <%= order === 'recent' ? 'active' : '' %>"
          href="?order=recent"
          >Mais recente</a
        >
        <a
          class="dropdown-item <%= order === 'old' ? 'active' : '' %>"
          href="?order=old"
          >Mais antigo</a
        >
        <a
          class="dropdown-item <%= order === 'featured' ? 'active' : '' %>"
          href="?order=featured"
          >Em destaque</a
        >
        <a
          class="dropdown-item <%= order === 'a-z' ? 'active' : '' %>"
          href="?order=a-z"
          >A - Z</a
        >
        <a
          class="dropdown-item <%= order === 'z-a' ? 'active' : '' %>"
          href="?order=z-a"
          >Z - A</a
        >
      </div>
    </div>
    <!-- filtrar (pagina) -->
    <%
      const buildQueryString = (queryObj) => {
        const params = new URLSearchParams();
        for (const key in queryObj) {
          const value = queryObj[key];
          if (Array.isArray(value)) {
            value.forEach((v) => params.append(key, v));
          } else {
          params.append(key, value);
        }
      }
        return params.toString();
      };
    %>
    <div class="d-flex main-card-filter-left justify-content-center">
      <button
        type="button"
        onclick="window.location.href='/search-filter?<%= buildQueryString(query) %>'"
      >
        <i class="bi bi-funnel-fill me-2"></i> <b>FILTRAR</b>
      </button>
    </div>
  </div>
</div>

<div id="joblist">
  %> <% if (announcements.length === 0) { %>
  <p class="text-center my-5 fw-bold">Nenhum anúncio disponível no momento.</p>
  <% } %> <% announcements.forEach((announcement) => { %>
  <a
    href="/home-details-announcement?id=<%= announcement._id %>"
    class="job-card text-decoration-none text-dark"
  >
    <div class="white-card pointer d-flex p-0 position-relative">
      <!-- Número de candidaturas -->
      <div class="application-count">
        <span>Candidaturas: <%= announcement.numberOfApplications || 0 %></span>
      </div>

      <!-- restante do conteúdo do card -->
      <div class="d-flex justify-content-start">
        <!-- imagem -->
        <div class="mini-card-image-wrapper">
          <img class="structure-img" src="<%= announcement.pic %>" />
        </div>

        <!-- texto -->
        <div class="d-flex flex-column justify-content-between ps-2 pt-1 pb-2">
          <div class="mb-0">
            <h5 class="text-truncate" style="max-width: 230px"><%= announcement.job_name %></h5>
            <h6 class="job-category mb-0 fw-normal visually-hidden">
              <%= announcement.category %>
            </h6>
            <h6 class="job-location mb-0 fw-normal">
              <%= announcement.municipality %>
            </h6>
            <h6 class="job-type fw-normal"><%= announcement.regime %></h6>
          </div>
          <div>
            <h6 class="fw-normal text-muted pointer text-decoration-underline">
              Saber mais
            </h6>
          </div>
        </div>
      </div>
    </div>
  </a>
  <% }); %>
</div>

<!-- Navegação por páginas -->
<div id="pagination" class="d-flex justify-content-center mt-4">
  <nav aria-label="Navegação de páginas">
    <ul class="pagination pagination-bordered">
      <% if (currentPage > 1) { %>
      <li class="page-item">
        <a
          class="page-link"
          href="?<%= buildQueryString({ ...query, page: currentPage - 1 }) %>"
          >Anterior</a
        >
      </li>
      <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
        <a
          class="page-link"
          href="?<%= buildQueryString({ ...query, page: i }) %>"
          ><%= i %></a
        >
      </li>
      <% } %> <% if (currentPage < totalPages) { %>
      <li class="page-item">
        <a
          class="page-link"
          href="?<%= buildQueryString({ ...query, page: currentPage + 1 }) %>"
          >Próxima</a
        >
      </li>
      <% } %>
    </ul>
  </nav>
</div>

<!-------Botão flutuante para voltar ao topo da página------>
<button onclick="scrollToTop()" id="btnTop">↑</button>

<!----------------------Alertas------------------------------->

<div
  id="notification-cand-env"
  class="notificationcandenv"
  style="display: none"
>
  <div class="alert">!</div>
  <div class="content">
    <div class="title">Notificação</div>
    <div class="message">Candidatura enviada com sucesso</div>
  </div>
  <div class="progress-bar-cand-env"></div>
  <!-- Barra de progresso -->
</div>

<script src="/js/top-button.js"></script>
<script src="/js/home.js"></script>
<script src="/js/notifications.js"></script>
