<head>
  <link href="/css/general.css" rel="stylesheet" />
  <link href="/css/client-my-profile.css" rel="stylesheet" />
</head>




<% const langs = Array.isArray(profile.languages) ? profile.languages : []; %>

<form id="professional-form" method="POST" action="/my-account">
  <h2 class="fw-bold mb-4" id="personalData">Dados Profissionais</h2>
  <div>
    <style>
      /* Força o estilo padrão de checkbox */
      .form-check-input[type="checkbox"] {
        appearance: checkbox;
        -webkit-appearance: checkbox;
        -moz-appearance: checkbox;
        width: auto;
        height: auto;
        margin-top: 0.3em;
      }
    </style>

    <div class="mb-3">
      <h5 class="mb-3 fw-bold">Línguas</h5>
      <div class="d-flex flex-wrap gap-3">
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="languages[]"
            value="Eng"
            id="lingua-ingles"
            <%= langs.includes("Inglês") ? "checked" : "" %>
          />
          <label class="form-check-label" for="lingua-ingles">Inglês</label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="languages[]"
            value="Fr"
            id="lingua-frances"
            <%= langs.includes("Francês") ? "checked" : "" %>
          />
          <label class="form-check-label" for="lingua-frances">Francês</label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="languages[]"
            value="Esp"
            id="lingua-espanhol"
            <%= langs.includes("Espanhol") ? "checked" : "" %>
          />
          <label class="form-check-label" for="lingua-espanhol">Espanhol</label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="languages[]"
            value="Ger"
            id="lingua-alemao"
            <%= langs.includes("Alemão") ? "checked" : "" %>
          />
          <label class="form-check-label" for="lingua-alemao">Alemão</label>
        </div>
      </div>
    </div>
  </div>
  <!-- Escolaridade -->
  <div class="escolaridade">
    <select id="escolaridade" name="education_level">
      <option value="selecione">Selecione o nível de escolaridade</option>
      <option value="ensino basico" <%= profile.education_level === "ensino básico" ? "selected" : "" %>>Ensino básico</option>
      <option value="ensino secundario" <%= profile.education_level === "ensino secundário" ? "selected" : "" %>>Ensino secundário</option>
      <option value="ensino superior" <%= profile.education_level === "ensino superior" ? "selected" : "" %>>Ensino superior</option>
    </select>
  </div>
  <div>
    <input
      class="form-group"
      type="tel"
      name="skills"
      placeholder="Competências"
      value="<%= Array.isArray(profile.skills) ? profile.skills.join(', ') : profile.skills %>"
    />
  </div>
  <div class="sobre">
    <input type="text" placeholder="Sobre mim" <%= profile.about_me %> />
  </div>

  <div>
    <h5 class="mb-3 mt-2 fw-bold" id="cv">Anexar CV:</h5>
    <input type="file" class="d-none" id="fileInput" />
    <label for="fileInput" class="btn btn-primary">
      <i class="bi bi-upload"></i> Enviar arquivo
    </label>
  </div>
<br />
<br />
<div class="actions-btn d-flex">
  <div class="d-flex justify-content-between gap-3 buttonWidth">
    <button
      type="button"
      class="buttonWidth btn btn-black"
      onclick="window.location.href='/'"
    >
      Voltar
    </button>
    <button type="submit" class="buttonWidth btn btn-blue">Guardar</button>
  </div>
</div>
</form>
<script src="/js/client-my-profile.js"></script>

