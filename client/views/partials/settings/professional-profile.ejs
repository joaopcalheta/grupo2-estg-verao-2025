<head>
  <link href="/css/general.css" rel="stylesheet" />
  <link href="/css/client-my-profile.css" rel="stylesheet" />
</head>


<% const langs = Array.isArray(profile.languages) ? profile.languages : []; %>

<form id="professional-form" method="POST" action="/professional-profile">
  
  <div>
    <style>
      /* Força o estilo padrão de checkbox */
      .form-check-input[type="checkbox"] {
        appearance: checkbox;
        -webkit-appearance: checkbox;
        -moz-appearance: checkbox;
        width: auto;
        height: auto;
        margin-top: 0.3em;
      }
    </style>

    <div class="mb-3">
      <label class="mb-1 fw-bolder" for="languages">Línguas</label>
      <div class="d-flex flex-wrap gap-3">
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="languages"
            value="Inglês"
            id="lingua-ingles"
            <%= langs.includes("Inglês") ? "checked" : "" %>
          />
          <label class="form-check-label" for="lingua-ingles">Inglês</label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="languages"
            value="Francês"
            id="lingua-frances"
            <%= langs.includes("Francês") ? "checked" : "" %>
          />
          <label class="form-check-label" for="lingua-frances">Francês</label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="languages"
            value="Espanhol"
            id="lingua-espanhol"
            <%= langs.includes("Espanhol") ? "checked" : "" %>
          />
          <label class="form-check-label" for="lingua-espanhol">Espanhol</label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="languages"
            value="Alemão"
            id="lingua-alemao"
            <%= langs.includes("Alemão") ? "checked" : "" %>
          />
          <label class="form-check-label" for="lingua-alemao">Alemão</label>
        </div>
      </div>
    </div>
  </div>
  <!-- Escolaridade -->
  <div class="escolaridade">
    <label class="mb-2 fw-bolder" for="escolaridade">Escolaridade</label>
    <select id="escolaridade" name="education_level">
      <option value="selecione">Selecione o nível de escolaridade</option>
      <option value="basico" <%= profile.education_level === "basico" ? "selected" : "" %> >Ensino Básico</option>
      <option value="secundario" <%= profile.education_level === "secundario" ? "selected" : "" %> >Ensino Secundário</option>
      <option value="licenciatura" <%= profile.education_level === "licenciatura" ? "selected" : "" %> >Licenciatura</option>
      <option value="mestrado" <%= profile.education_level === "mestrado" ? "selected" : "" %> >Mestrado</option>
      <option value="doutoramento" <%= profile.education_level === "doutoramento" ? "selected" : "" %> >Doutoramento</option>
    </select>
  </div>
  <div>
    <label class="mb-2 fw-bolder" for="skills">Competências</label>
    <input
      type="text"
      name="skills"
      placeholder="Competências"
      value="<%= Array.isArray(profile.skills) ? profile.skills.join(', ') : profile.skills %>"
    />
  </div>
  <div class="sobre">
    <label class="mb-2 mt-2 fw-bolder" for="about_me">Sobre Mim</label>
    <textarea
      class="form-control"
      rows="5"
      name="about_me"
      placeholder="Sobre mim"
      style="white-space: pre-wrap;"
      maxlength="1000"
    ><%= profile.about_me || '' %></textarea>
</div>

  <div>
    <h5 class="mb-2 mt-3 fw-bold" id="cv">Anexar CV</h5>
    <input type="file" name="cv" class="d-none" id="fileInput" />
    <label for="fileInput" class="btn btn-primary">
      <i class="bi bi-upload"></i> Enviar arquivo
    </label>
  </div>
<br />
<br />
<div class="actions-btn d-flex">
  <div class="d-flex justify-content-between gap-3 buttonWidth">
    
    <button type="submit" class="buttonWidth btn btn-blue">Guardar</button>
  </div>
</div>
</form>
<script src="/js/client-my-profile.js"></script>

