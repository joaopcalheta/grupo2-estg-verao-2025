<% if (companies.length === 0) { %>
<p class="text-center">Não está associado a nenhuma empresa.</p>
<% } %> <% companies.forEach((company) => { %>
<div class="white-card d-flex p-0">
  <div class="d-flex justify-content-start">
    <!-- imagem -->
    <div class="image-wrapper">
      <img class="announcement-img" src="<%= announcement.pic %>" />
    </div>
    <!-- texto -->
    <div class="d-flex flex-column justify-content-between ps-2 pt-1 pb-2">
      <div class="mb-2">
        <h5><%= company.name %></h5>
        <h6 class="mb-0 fw-normal"><%= company.municipality %></h6>
      </div>
    </div>
  </div>
</div>
<% }); %>
<div class="text-center">
  <button class="btn btn-blue" onclick="location.href='/create-company'">
    + Criar empresa
  </button>
</div>
