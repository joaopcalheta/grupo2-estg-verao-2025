<head>
  <link href="/css/general.css" rel="stylesheet" />
  <link href="/css/company-my-announcements.css" rel="stylesheet" />
</head>

<div class="container">
  <h3 class="text-center fw-bold mb-3 mt-2">Candidatos</h3>
<% if (applications.length === 0) { %>
  <p class="text-center fw-bold mt-4">Ainda não há candidaturas para este anúncio.</p>
<% } else { %>
  <% applications.forEach(application => {
    const avatar = (application.user_id && application.user_id.avatar) 
                    ? application.user_id.avatar 
                    : '/images/my-account.png';    
    %>
    <div class="white-card">
      <div class="d-flex align-items-center">
        <img src="<%= avatar %>" class="candidate-img me-3" />
        <div>
          <h4 class="font-weight-bold mb-2"><%= application.name %></h4>
          <h6 class="mb-3">Descrição: <%= application.about_me %></h6>
          <a href="/company-details-candidate?id=<%= application._id %>" class="text-muted small ">Saber mais</a>
        </div>
      </div>
      <!--<div class="d-flex justify-content-between mt-2">
        <form method="POST" action="//<%= application._id %>/approve">
          <button class="p-3 btn btn-blue">Aceitar</button>
        </form>  
        <form method="POST" action="//<%= application._id %>/reject">
          <button class="p-3 btn btn-delete">Rejeitar</button>
        </form>
      </div>-->
    </div>
  <% }) %>
<% } %>
</div>

  <div class="d-grid mt-4">
    <button type="button" class="btn btn-black" onclick="history.back()">Voltar</button>
  </div>
</div>  