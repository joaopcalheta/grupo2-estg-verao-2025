<h2>Criar Anúncio</h2>
<form id="createAnuncioForm">
  <label>Nome da profissão
    <input type="text" name="title" required>
  </label>
  <label>Categoria
    <select name="category">
      <option>-- Selecione uma opção --</option>
      <option>Restauração</option>
      <option>Limpeza</option>
      <option>Construção</option>
      <option>Vendedor</option>
    </select>
  </label>
  <label>Tipo de contrato
    <select name="type">
      <option>-- Selecione uma opção --</option>
      <option>Emprego</option>
      <option>Estágio</option>
    </select>
  </label>
  <label>Local do emprego
    <input type="text" name="location" required>
  </label>
  <label>Regime
    <select name="regime">
      <option>-- Selecione uma opção --</option>
      <option>Full-Time</option>
      <option>Part-Time</option>
    </select>
  </label>
  <label>Descrição
    <textarea name="description" rows="4"></textarea>
  </label>
  <label>Adicionar foto
    <input type="file" name="photo">
  </label>
  <div class="actions-btn">
    <button type="button" class="btn btn-blue" onclick="history.back()">Voltar</button>
    <button type="submit" class="btn btn-blue">Criar</button>
  </div>
</form>

<script>

  document.getElementById('createAnuncioForm').addEventListener('submit', function (e) {
  e.preventDefault();

  const form = e.target;
  const anuncio = {
    profissao: form.title.value,
    categoria: form.category.value,
    tipo: form.type.value,
    local: form.location.value,
    regime: form.regime.value,
    descricao: form.description.value,
    foto: ''
  };

  const anuncios = JSON.parse(localStorage.getItem('anuncios')) || [];
  anuncios.push(anuncio);
  localStorage.setItem('anuncios', JSON.stringify(anuncios));

  alert('Anúncio criado com sucesso.');
    window.location.href = 'anuncios.html';
  });

</script>
